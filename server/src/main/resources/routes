# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index(path = "")
POST        /wired/*path         controllers.Application.api(path)

GET         /login               controllers.Application.index(path = "")
POST        /login               controllers.Application.login
GET         /logout              controllers.Application.logout

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)

->          /api/pets            controllers.PetRouter0.router
#->          /api/store                 controllers.swagger.StoreRouter
#->          /api/user                 controllers.swagger.UserRouter

GET         /*path               controllers.Application.index(path: String)

